<h1>New Question</h1>

<div class="row">
  <div class="col-md-4">
    <p>Guidelines for Questions</p>
    <ul>
      <li>If you know it don't ask it.</li>
      <li>Don't use foul language its not classy.</li>
    
    </ul>
  </div>
  <div class="col-md-8">
    <%= form_for @question do |q| %>
    <div class="form-group">
      <%= q.label :title %>
      <%= q.text_field :title, class: 'form-control', placeholder: "Enter Question title" %>
    </div>
    <div class="form-group">
      <%= q.label :body %>
      <%= q.text_area :body, rows: 8, class: 'form-control', placeholder: "Enter Question" %>
    </div>
    <div class="form-group">
      <%= q.submit "Save", class: 'btn btn-success' %>
    </div>
    <% end %>
  </div>
</div>
